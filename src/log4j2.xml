<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <ThresholdFilter level="TRACE"/>
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %t [%c{2}] %m%n"/>
    </Console>
    <Console name="stderr" target="SYSTEM_ERR">
      <ThresholdFilter level="WARN"/>
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %t [%c{2}] %m%n"/>
    </Console>
    <File name="file" fileName="logs/app.log">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %t [%c{2}] %m%n"/>
    </File>
    <Console name="stdout_loc" target="SYSTEM_OUT">
      <ThresholdFilter level="TRACE"/>
      <!-- <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] [%c{2}:%M:%L] %m%n"/> -->
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] %.40l %m%n"/>
    </Console>
    <Console name="stderr_loc" target="SYSTEM_ERR">
      <ThresholdFilter level="WARN"/>
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] %.40l %m%n"/>
    </Console>
    <File name="file_loc" fileName="logs/app.log">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t] %.40l %m%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="warn">
      <AppenderRef ref="stdout_loc"/>
      <AppenderRef ref="stderr_loc"/>
    </Root>
    <Logger name="org.nkjmlab" level="trace" additivity="false">
      <AppenderRef ref="stdout"/>
      <AppenderRef ref="stderr_loc"/>
    </Logger>
  </Loggers>
</configuration>
